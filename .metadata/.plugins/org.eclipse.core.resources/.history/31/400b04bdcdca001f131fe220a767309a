package SeleniumGoal.SeleniumPractiseAndExrecise;
import io.github.bonigarcia.wdm.WebDriverManager;
import org.openqa.selenium.By;
import org.openqa.selenium.OutputType;
import org.openqa.selenium.TakesScreenshot;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;

import java.io.File;
import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.Paths;
import java.time.Duration;
import java.util.List;

public class TwentySeventhTask 
{

	public static void main(String[] args) throws IOException 
	{
		        // Set up ChromeDriver using WebDriverManager
		        WebDriverManager.chromedriver().setup();

		        // Initialize WebDriver
		        WebDriver driver = new ChromeDriver();
		        WebDriverWait wait = new WebDriverWait(driver, Duration.ofSeconds(10));

		     
		            // Open the form page
		            driver.get("https://phptravels.com/demo/");

		            // Entering Firstname details
		            WebElement firstName = wait.until(ExpectedConditions.elementToBeClickable(By.name("first_name")));
		            firstName.sendKeys("John");
		            
		            // Entering LastName details
		            WebElement lastName = driver.findElement(By.name("last_name"));
		            lastName.sendKeys("Doe");
		            
		         // Selecting county number details
		            WebElement coutryNumber = driver.findElement(By.xpath("//select/option)[91]"));
		            lastName.sendKeys("Doe");
		            
		            
		            //Entering WhatsappNumber
		            List<WebElement> whatsaapNumber = driver.findElements(By.name("whatsapp"));
		            whatsaapNumber.sendKeys("9480143224");

		            
		            
		            WebElement businessName = driver.findElement(By.name("business_name"));
		            businessName.sendKeys("John's Business");

		            WebElement email = driver.findElement(By.name("email"));
		            email.sendKeys("john.doe@example.com");

		        }
		    }